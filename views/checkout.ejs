<html>
<head>
<% include partials/header.ejs %>
<link href="http://netdna.bootstrapcdn.com/twitter-bootstrap/2.3.2/css/bootstrap-combined.min.css" rel="stylesheet">
<script src="angularjs/index.js"></script>
  <script src="angularjs/session.js"></script>
  <script src="angularjs/login.js"></script>
  <script src="angularjs/mainController.js"></script>
<script src="angularjs/header.js"></script>
<script src="angularjs/ads.js"></script>
<script src="angularjs/cart.js"></script>
<link href="stylesheets/style.css" rel="stylesheet">

</head>
<body ng-app="mainApp" ng-controller="checkoutController">
<% include partials/top-bar.ejs %>
<br>
<br>
<div class="container">
	<div class="row">
		 <div class="col-md-4">
		 <br>
		 <br>
		 <br><ul>
			<div ng-repeat="item in itemsincart">
				<li><strong>{{item.item_name}}</strong>
				Qty- {{orderedquantities[$index]}}</li>
			</div>
			</ul>

			Amount: {{cost}}
		</div> 
		<div class="col-md-8">
			 <div class="alert alert-danger" ng-show="foundErrors">
            	<div ng-repeat="error in errors">
            	<p><strong>{{error.field}}</strong></p>
            	</div>
            </div>

        
            <form class="form-horizontal">
              <fieldset>
                <div id="legend" class="payment-top" ><span>
                  <legend class="">Payment <img class="header-list-right-payment" src="./img/Dark Color/12.png">
                   <img class="header-list-right-payment" src="./img/Dark Color/11.png">
                   <img class="header-list-right-payment" src="./img/Dark Color/5.png">
                  <img  class="header-list-right-payment" src="./img/Dark Color/2.png">               
                  <img class="header-list-right-payment" src="./img/Dark Color/1.png">
                  
                  </legend></span>

                </div>
           
                <!-- Name -->
                <div class="control-group">
                  <label class="control-label"  for="username">Card Holder's Name</label>
                  <div class="controls">
                    <input type="text" id="username" name="username" ng-model="cardName" placeholder="" class="credit-card-field" required/>
                    <div class="input-validation" style="display:inline;"></div>
                  </div>
                </div>
           
                <!-- Card Number -->
                <div class="control-group">
                  <label class="control-label" for="cardNumber">Card Number</label>
                  <div class="controls">
                  <span>
                    <input type="text" pattern="[0-9]{16}" id="email" ng-model="cardNumber" name="cardNumber" placeholder="" class="input-xlarge credit-card-field" required/>

           			<div class="input-validation" style="display:inline;"></div>
                  </div>
                </div>
           
                <!-- Expiry-->
                <div class="control-group">
                  <label class="control-label" for="expiry_month">Card Expiry Date</label>
                  <div class="controls">
                    <select class="span3 credit-card-field" name="expiry_month" ng-model="expiry_month" id="expiry_month" required>
                      <option></option>
                      <option value="01">Jan (01)</option>
                      <option value="02">Feb (02)</option>
                      <option value="03">Mar (03)</option>
                      <option value="04">Apr (04)</option>
                      <option value="05">May (05)</option>
                      <option value="06">June (06)</option>
                      <option value="07">July (07)</option>
                      <option value="08">Aug (08)</option>
                      <option value="09">Sep (09)</option>
                      <option value="10">Oct (10)</option>1
                      <option value="11">Nov (11)</option>
                      <option value="12">Dec (12)</option>
                    </select>
                    <select class="span2 credit-card-field" name="expiry_year" ng-model="expiry_year" required>
                      <option value="16">2016</option>
                      <option value="17">2017</option>
                      <option value="18">2018</option>
                      <option value="19">2019</option>
                      <option value="20">2020</option>
                      <option value="21">2021</option>
                      <option value="22">2022</option>
                      <option value="23">2023</option>
                    </select>
                  </div>
                </div>
           
                <!-- CVV -->
                <div class="control-group">
                  <label class="control-label"  for="password_cvv">Card CVV</label>
                  <div class="controls">
                    <input type="password" id="password_cvv" name="password_cvv" placeholder="" ng-model="password_cvv" class="span2 credit-card-field" maxlength="4" required>
                  </div>
                </div>
          	
                <!-- Submit -->
                <div class="control-group">
                  <div class="controls">
                    <button class="btn btn-primary" ng-click="processCard()">Pay Now</button>
                  </div>
                </div>
           
              </fieldset>
            </form>

           
             
         



		</div>
	</div>
</div>
</html>